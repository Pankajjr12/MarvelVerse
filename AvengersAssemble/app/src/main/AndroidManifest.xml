<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pankaj.avengersassemble">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launchercopy"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launchercopy_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AvengersAssemble">
        <activity android:name=".views.fragments.characterDetail.CharacterActivity"></activity>
        <activity android:name=".views.activities.home.HomeActivity" />
        <activity android:name=".views.activities.SplashActivity" />
        <activity android:name=".views.fragments.movieDetailFragment.MovieDetailActivity" />
        <activity android:name=".views.activities.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>