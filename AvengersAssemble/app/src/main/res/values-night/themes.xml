<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AvengersAssemble" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/maroon_light</item>
        <item name="colorPrimaryVariant">@color/maroon_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/maroon_light</item>
        <item name="colorSecondaryVariant">@color/maroon_light</item>
        <item name="colorOnSecondary">@color/maroon_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ToolBar.title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>

    </style>
    <style name="search">
        <item name="android:textColor">@color/black</item>
    </style>


</resources>