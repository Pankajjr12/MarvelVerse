<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/cardview_shadow_end_color"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    android:id="@+id/lllayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/avengers2"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_font"
        app:layout_constraintTop_toTopOf="@+id/img"
        android:text="Movie Name"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/img"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_5sdp"/>
    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintEnd_toEndOf="@id/tvName"
        android:background="@color/maroon_light"
        app:layout_constraintTop_toBottomOf="@id/tvName"/>
    <TextView

        android:id="@+id/movieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:text="Avengers"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="22sp"
        android:lines="2"
        app:layout_constraintStart_toEndOf="@id/img"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/tvRel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_font"
        app:layout_constraintTop_toBottomOf="@+id/movieName"
        android:text="Released Year"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toEndOf="@id/img"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_5sdp"/>
    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="@id/tvRel"
        app:layout_constraintEnd_toEndOf="@id/tvRel"
        android:background="@color/maroon_light"
        app:layout_constraintTop_toBottomOf="@id/tvRel"/>

    <TextView

        android:id="@+id/relYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/view2"
        android:text="2012"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@id/img"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_5sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>